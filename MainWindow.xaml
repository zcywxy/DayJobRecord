<Window x:Class="DayJobRecord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DayJobRecord"
        mc:Ignorable="d"
        Title="工作日报记录" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="{x:Null}">
    <Window.Resources>
        <Style x:Key="TaskCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisible}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TaskItemCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="ToolBarStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <materialDesign:DialogHost Identifier="MainDialog">
        <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="任务列表" Style="{StaticResource SectionHeaderStyle}"/>

            <Border Grid.Row="1" Style="{StaticResource ToolBarStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" ToolTip="新增任务" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Command="{Binding AddTaskCommand}" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="Plus" Width="18" Height="18"/>
                    </Button>
                    
                    <CheckBox Grid.Column="1" Content="显示所有任务" 
                              IsChecked="{Binding ShowAllTasks, Mode=TwoWay}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              VerticalAlignment="Center" HorizontalAlignment="Right"
                              Margin="0,0,16,0"/>
                    
                    <Button Grid.Column="2" ToolTip="生成日报" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding GenerateReportCommand}"
                            Height="32" Padding="12,0" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocumentOutline" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock Text="生成日报" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <ListBox Grid.Row="2" ItemsSource="{Binding Tasks}"
                     SelectedItem="{Binding SelectedTask}"
                     Style="{StaticResource MaterialDesignListBox}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ItemBorder" 
                                            Background="White" 
                                            CornerRadius="6" 
                                            Padding="14,10"
                                            Margin="0,2,0,2"
                                            BorderThickness="2"
                                            BorderBrush="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Unselected"/>
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemBorder" Storyboard.TargetProperty="BorderBrush">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                            <Setter TargetName="ItemBorder" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox Grid.Row="0" Grid.Column="0" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Medium"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                                <Border Background="#E3F2FD" 
                                        CornerRadius="3" 
                                        Padding="6,1" 
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TaskTypeDisplay}" 
                                               FontSize="10"
                                               Foreground="#1976D2"/>
                                </Border>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                                <Button ToolTip="修改任务" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        Width="24" Height="24">
                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                </Button>
                                <Button ToolTip="删除任务" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        Background="#ef5350" BorderBrush="#ef5350"
                                        Width="24" Height="24" Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Delete" Width="14" Height="14"/>
                                </Button>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="状态：" Foreground="#9E9E9E" FontSize="11"/>
                                <TextBlock Text="{Binding Status}" Margin="0,0,12,0" 
                                           Foreground="#616161" FontSize="11"/>
                                
                                <TextBlock Text="优先级：" Foreground="#9E9E9E" FontSize="11"/>
                                <TextBlock Text="{Binding Priority}" Margin="0,0,12,0" 
                                           Foreground="#616161" FontSize="11"/>
                                
                                <TextBlock Text="显示：" Foreground="#9E9E9E" FontSize="11"/>
                                <TextBlock Text="{Binding IsShow, Converter={StaticResource BoolToStringConverter}}" 
                                           Foreground="#616161" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                      Background="#E0E0E0" Margin="8,0"/>

        <Grid Grid.Column="2" Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="任务细项" Style="{StaticResource SectionHeaderStyle}"/>

            <Border Grid.Row="1" Style="{StaticResource ToolBarStyle}">
                <Grid>
                    <Button ToolTip="新增细项" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Command="{Binding AddTaskItemCommand}" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="Plus" Width="18" Height="18"/>
                    </Button>
                </Grid>
            </Border>

            <ListBox Grid.Row="2" ItemsSource="{Binding TaskItems}"
                     SelectedItem="{Binding SelectedTaskItem}"
                     Style="{StaticResource MaterialDesignListBox}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ItemBorder" 
                                            Background="White" 
                                            CornerRadius="6" 
                                            Padding="14,10"
                                            Margin="0,2,0,2"
                                            BorderThickness="2"
                                            BorderBrush="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Unselected"/>
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemBorder" Storyboard.TargetProperty="BorderBrush">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Content}" 
                                       TextWrapping="Wrap"
                                       FontWeight="Medium"
                                       FontSize="13"
                                       LineHeight="20"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       MaxWidth="400"/>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                                <Button ToolTip="修改细项" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.EditTaskItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        Width="24" Height="24">
                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                </Button>
                                <Button ToolTip="删除细项" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.DeleteTaskItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        Background="#ef5350" BorderBrush="#ef5350"
                                        Width="24" Height="24" Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Delete" Width="14" Height="14"/>
                                </Button>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="完成时间：" Foreground="#9E9E9E" FontSize="11"/>
                                <TextBlock Text="{Binding CompleteDate}"
                                           Foreground="#616161" FontSize="11" Margin="0,0,16,0"/>
                                
                                <TextBlock Text="日报项：" Foreground="#9E9E9E" FontSize="11"/>
                                <TextBlock Text="{Binding IsReportItem, Converter={StaticResource BoolToStringConverter}}" 
                                           Foreground="#616161" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
    </materialDesign:DialogHost>
</Window>
