<Window x:Class="DayJobRecord.Views.DailyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="日报预览" Height="520" Width="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="{DynamicResource MaterialDesignPaper}" 
            CornerRadius="8" 
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="1"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.3" Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" 
                    CornerRadius="8,8,0,0" Padding="16,12">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FileDocumentOutline" Width="20" Height="20" 
                                                 Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="日报预览" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="White" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            HorizontalAlignment="Right" Click="CloseButton_Click"
                            Width="24" Height="24">
                        <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <TextBox Grid.Row="1" 
                     Text="{Binding ReportText, Mode=OneWay}"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="13"
                     Margin="24,20,24,0"
                     Padding="12"/>

            <Border Grid.Row="2" Padding="24,16" Background="Transparent">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="CopyButton_Click" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentCopy" Width="18" Height="18" 
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="复制到剪贴板" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Content="关闭" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CloseButton_Click" Width="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
