<Window x:Class="DayJobRecord.Views.TaskItemEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="编辑任务细项" Height="420" Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStyle="None"
        AllowsTransparency="True">
    <materialDesign:DialogHost Identifier="TaskItemEditDialog">
        <Border Background="{DynamicResource MaterialDesignPaper}" 
                CornerRadius="8" 
                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="1"
                Margin="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.3" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <Grid>
                        <TextBlock Text="编辑任务细项" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                HorizontalAlignment="Right" Click="CancelButton_Click"
                                Width="24" Height="24">
                            <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,20,24,0">
                        <TextBox materialDesign:HintAssist.Hint="完成内容" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding ItemContent, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 AcceptsReturn="True"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker Grid.Column="0"
                                        materialDesign:HintAssist.Hint="开始时间"
                                        materialDesign:HintAssist.IsFloating="True"
                                        SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                            <DatePicker Grid.Column="2"
                                        materialDesign:HintAssist.Hint="结束时间"
                                        materialDesign:HintAssist.IsFloating="True"
                                        SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                        </Grid>

                        <CheckBox Content="是否显示在日报中" 
                                  IsChecked="{Binding IsReportItem, Mode=TwoWay}"
                                  Style="{StaticResource MaterialDesignCheckBox}"
                                  Margin="0,0,0,16"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Padding="24,16" Background="Transparent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="取消" Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="CancelButton_Click" Margin="0,0,12,0" Width="80"/>
                        <Button Content="保存" Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="OkButton_Click" IsDefault="True" Width="80"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>
