<Window x:Class="DayJobRecord.Views.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="编辑任务" Height="420" Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStyle="None"
        AllowsTransparency="True">
    <materialDesign:DialogHost Identifier="TaskEditDialog">
        <Border Background="{DynamicResource MaterialDesignPaper}" 
                CornerRadius="8" 
                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="1"
                Margin="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.3" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" 
                        CornerRadius="8,8,0,0" Padding="16,12">
                    <Grid>
                        <TextBlock Text="编辑任务" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                HorizontalAlignment="Right" Click="CancelButton_Click"
                                Width="24" Height="24">
                            <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,20,24,0">
                        <TextBox materialDesign:HintAssist.Hint="任务名称" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding TaskName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"/>

                        <ComboBox materialDesign:HintAssist.Hint="任务类型"
                                  materialDesign:HintAssist.IsFloating="True"
                                  SelectedIndex="{Binding TaskTypeIndex}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="开发任务"/>
                            <ComboBoxItem Content="问题处理"/>
                        </ComboBox>

                        <TextBox materialDesign:HintAssist.Hint="状态" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"/>

                        <TextBox materialDesign:HintAssist.Hint="优先级 (数字越大越靠前)" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Text="{Binding PriorityText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"/>

                        <CheckBox Content="是否在列表中显示此任务" 
                                  IsChecked="{Binding IsShow}"
                                  Style="{StaticResource MaterialDesignCheckBox}"
                                  Margin="0,0,0,16"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Padding="24,16" Background="Transparent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="取消" Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="CancelButton_Click" Margin="0,0,12,0" Width="80"/>
                        <Button Content="保存" Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="OkButton_Click" IsDefault="True" Width="80"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>
